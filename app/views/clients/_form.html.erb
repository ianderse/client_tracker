<%= form_for(@client) do |f| %>
  <p>
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name, autofocus: true %>
  </p>
  <p>
  	<%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </p>
  <p>
  	<%= f.label :age %><br/>
    <%= f.text_field :age %>
  </p>
  <p>
  	<%= f.label :gender %><br/>
    <%= f.text_field :gender %>
  </p>
  <p>
  	<%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
  	<%= f.label :phone_number %><br/>
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", clients_path %>
  </p>
<% end %>
