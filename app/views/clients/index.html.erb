<h1><%= pluralize(@clients.size, 'Client') %></h1>

<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Age</th>
		<th>Gender</th>
		<th>Email</th>
		<th>Phone Number</th>
		<th>Options</th>
	</tr>
	<% @clients.each do |client| %>
		<tr>
			<td><%= client.first_name %></td>
			<td><%= client.last_name %></td>
			<td><%= client.age %></td>
			<td><%= client.gender %></td>
			<td><%= client.email %></td>
			<td><%= client.phone_number %></td>
			<td><%= link_to "Session Information", client_path(client) %></td>
		</tr>
	<% end %>
</table>

<%= link_to "New Client", new_client_path %>

<%= render 'footer' %>
